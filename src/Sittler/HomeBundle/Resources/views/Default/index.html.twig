			{% for rubrique in boucleRubriques({ "idRubrique" : 3 }) %}
				<a href="mercerie">
					<img class="lightsrcshot" src="{{ image(rubrique.getPathAbsoluteLocalLogo()).crop(30,100,790,100) }}" alt="{{ rubrique.titre }}">
					<span class="item-titre">{{ rubrique.titre }}</span>
				</a>
			{% endfor %}
</div>    -->

{% endblock %}
