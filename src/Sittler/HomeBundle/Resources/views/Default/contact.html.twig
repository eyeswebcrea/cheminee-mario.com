{% extends "::base.html.twig" %}

{% block stylesheets %}
	    {% 
        		stylesheets output='css/mercerie.css' 
        		'@SittlerHomeBundle/Resources/public/css/contact.css'
        %}        		
        	<link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" />
        {% endstylesheets %}
{% endblock %}


{% block bandeau %} {% endblock %}

{% block body %}
	<div id="fond-contact" class="span-24">
		<div id="champs-haut"   class="span-24 block block-12-line">
				<div id="formulaire-contact" class="span-10 block block-8-line prepend-2 prepend-top">
					<fieldset class="formulaire">
						<legend> Nous contacter </legend>
						
						<form action="#" method="post">
							{% render "IHQSContactBundle:Contact:form" %}
						</form>
					</fieldset>
				</div>
				<div id="plan-acces" class="span-8 prepend-2 prepend-top">
					<img id="google-map" class="prepend-top" src="<iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=28+Rue+Gay-Lussac92320&amp;aq=&amp;sll=48.84461,2.394676&amp;sspn=0.137598,0.284958&amp;ie=UTF8&amp;t=m&amp;z=12&amp;ll=48.84461,2.394676&amp;output=embed"></iframe><br /><small><a href="http://maps.google.com/maps?f=q&amp;source=embed&amp;hl=en&amp;geocode=&amp;q=28+Rue+Gay-Lussac92320&amp;aq=&amp;sll=48.84461,2.394676&amp;sspn=0.137598,0.284958&amp;ie=UTF8&amp;t=m&amp;z=12&amp;ll=48.84461,2.394676" style="color:#0000FF;text-align:left">View Larger Map</a></small>
				</div>
		<div class="span-24 ">
			<div id="affichage-logo"  class="span-10 prepend-3 prepend-top append-bottom">
				{% for rubrique in boucleRubriques({ "idRubrique" : 52 }) %}
				<a href="http://www.jide.be">
					<img id="distri-jde" src="{{ image(rubrique.getPathAbsoluteLocalLogo()).forceResize(200,120) }}" alt="{{ rubrique.titre }}">
				</a>
				{% endfor %}
				{% for rubrique in boucleRubriques({ "idRubrique" : 53 }) %}
				<a href="http://www.cera-kaminofen.de/fr/poeles/">
					<img id="distri-cera" src="{{ image(rubrique.getPathAbsoluteLocalLogo()).forceResize(200,120) }}" alt="{{ rubrique.titre }}">
				</a>
				{% endfor %}
				{% for rubrique in boucleRubriques({ "idRubrique" : 54 }) %}
				<a href="http://www.spartherm.com/">
					<img id="distri-spartherm" src="{{ image(rubrique.getPathAbsoluteLocalLogo()).forceResize(200,120) }}" alt="{{ rubrique.titre }}">
				</a>
				{% endfor %}
			</div>
			<div id="adresse-logo"  class="span-8 prepend-1 prepend-top last append-bottom" id="contact">
			{% for article in boucleArticles({ "idArticle" : 40 }) %}
				<h2 class="block-title">{{ article.titre }}</h2>
				<div class="block-content">
					{{ article.texte | raw }}
				</div>
			{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}